<form class="new-tweet">
  <div class="form-group">
    <label for="new-name"> Name: </label>
    {{input value=name id="name" class="form-control" maxlength="141" required="required" autofocus="autofocus"}}
  </div>
  <div class="form-group">
    <label for="new-tweet">Enter A New Tweet</label>
    {{textarea value=text id="text" class="form-control" rows="3" maxlength="141"}}
  </div>
  <button class="btn btn-success" {{action "save"}}> Submit Tweet </button>
</form>
